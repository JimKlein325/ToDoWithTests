@model TravelBlog.Models.People

@{
    ViewData["Title"] = "People - Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Edit</h2>
<hr />
<h4>Edit this person: @Html.DisplayFor(model => model.Name)</h4>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.PersonId)

    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)

    @Html.LabelFor(model => model.PeopleLocations)
    @Html.DropDownList("LocationId")

    @Html.LabelFor(model => model.Bio)
    @Html.EditorFor(model => model.Bio)

    @Html.LabelFor(model => model.ImageURL)
    @Html.EditorFor(model => model.ImageURL)


    <input type="submit" value="Save" class="btn btn-default" />
}
@Html.ActionLink("Back to List", "Index")