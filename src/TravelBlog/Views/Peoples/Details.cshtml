@model TravelBlog.Models.People

@{ 
    ViewData["Title"] = "People - Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>People Details</h2>
<hr />
<h1>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h1>

<div class="row">
    <div class="col-md-4">
        <img src="@Model.ImageURL" class="avatar-image" />
    </div>
    <div class="col-md-8">
        <p>@Html.DisplayNameFor(model => model.Bio): @Html.DisplayFor(model => model.Bio)</p>

        <h4>Experiences:</h4>
        <ul>
            @if (Model.PeopleExperiences.Count == 0)
            {
                <li>No Experiences Yet</li>
            }
            else
            {
                @foreach (var experience in Model.PeopleExperiences)
                {

                    <li> @Html.ActionLink(experience.Experience.Title, "Details", "Experiences", new { id = experience.ExperienceId }) </li>
                }
            }
        </ul>
    </div>
    <div class="col-md-12">
        <p>@Html.ActionLink("Edit", "Edit", new { id = Model.PersonId })</p>
    </div>
 </div>